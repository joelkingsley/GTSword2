<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.karthi.gtsword.NewSectionActivity">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="33dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner1"
            android:layout_alignStart="@+id/spinner1"
            android:layout_below="@+id/parsed_text"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="74dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Book Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.032" />

    <TextView
        android:id="@+id/parsed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Chapter Number"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="57dp" />

        <NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/parsed_text"
            android:layout_toStartOf="@+id/parsed_text"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="98dp" />

    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/numberPicker1"
        android:layout_alignBottom="@+id/numberPicker1"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/parsed_text"
        android:layout_toRightOf="@+id/parsed_text"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="98dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/numberPicker1"
        android:layout_alignLeft="@+id/numberPicker1"
        android:layout_alignRight="@+id/numberPicker1"
        android:layout_alignStart="@+id/numberPicker1"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Start Verse"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/numberPicker2"
        android:layout_alignLeft="@+id/numberPicker2"
        android:layout_alignRight="@+id/numberPicker2"
        android:layout_alignStart="@+id/numberPicker2"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="End Verse"
        android:textAlignment="center" />

        <Button
            android:id="@+id/parse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="88dp"
            android:onClick="submit"
            android:text="Done" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Select Section to Add"
        android:textSize="24sp" />
</RelativeLayout>
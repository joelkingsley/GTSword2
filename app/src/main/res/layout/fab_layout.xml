<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="180dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/action_add"
        android:visibility="invisible"
        app:backgroundTint="@color/SwordBlue"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_motivate"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="160dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/action_motivation"
        android:visibility="invisible"
        app:backgroundTint="@color/SwordBlue"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_delete"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginRight="110dp"
        android:clickable="true"
        android:src="@drawable/action_delete"
        android:visibility="invisible"
        app:backgroundTint="@color/SwordBlue"
        app:fabSize="normal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_bible"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="80dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="@color/SwordBlue"
        app:fabSize="normal"
        app:srcCompat="@drawable/action_bible" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_about"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/action_about"
        android:visibility="invisible"
        app:backgroundTint="@color/SwordBlue"
        app:fabSize="normal" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="230dp"
        android:layout_marginRight="20dp"
        android:background="#AA353744"
        android:fadingEdge="horizontal|vertical"
        android:singleLine="true"
        android:text="Add Section"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_motivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="110dp"
        android:background="#AA353744"
        android:fadingEdge="horizontal|vertical"
        android:singleLine="true"
        android:text="Motivation"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="170dp"
        android:background="#AA353744"
        android:fadingEdge="horizontal|vertical"
        android:singleLine="true"
        android:text="Delete Section"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_bible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="130dp"
        android:background="#AA353744"
        android:fadingEdge="horizontal|vertical"
        android:singleLine="true"
        android:text="Bible"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="30dp"
        android:background="#AA353744"
        android:fadingEdge="horizontal|vertical"
        android:singleLine="true"
        android:text="About Us"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

</FrameLayout>